{
    "name": "@cordxapp/demonstride",
    "description": "RESTful API for managing and accessing CordX Services, version 4",
    "keywords": [
        "cordx",
        "api",
        "cordxapp",
        "demonstride",
        "fastify",
        "typescript"
    ],
    "directories": {
        "test": "test"
    },
    "author": "TheRealToxicDev",
    "version": "4.0.0",
    "main": "app.ts",
    "scripts": {
        "build": "tsup",
        "build:ts": "tsup --env.NODE_ENV production",
        "check": "biome check --apply .",
        "compile-schemas": "json2ts -i src/schemas -o src/types",
        "copy:assets": "cpy 'src/generated/*.json' dist/generated",
        "db:init": "prisma init --schema=./src/prisma/schema.prisma",
        "db:create": "prisma generate --schema=./src/prisma/schema.prisma",
        "db:push": "prisma db push --schema=./src/prisma/schema.prisma",
        "dev": "pnpm compile-schemas && pnpm dev:watch",
        "dev:watch": "tsx watch src/server.ts",
        "format": "biome format . --write",
        "lint": "biome lint .",
        "migrate:eslint": "biome migrate eslint --write",
        "migrate:prettier": "biome migrate prettier --write",
        "start": "tsx src/server.ts",
        "start:prod": "node dist/server.js",
        "test": "cross-env TS_NODE_FILES=true tap test/**/*.test.ts",
        "typecheck": "tsc -noEmit"
    },
    "dependencies": {
        "@cordxapp/snowflake": "^0.4.18",
        "@fastify/autoload": "5.10.0",
        "@fastify/cors": "9.0.1",
        "@fastify/env": "4.4.0",
        "@fastify/etag": "5.2.0",
        "@fastify/helmet": "11.1.1",
        "@fastify/multipart": "8.3.0",
        "@fastify/rate-limit": "9.1.0",
        "@fastify/sensible": "5.6.0",
        "@fastify/swagger": "8.15.0",
        "@fastify/swagger-ui": "4.1.0",
        "@fastify/static": "6.12.0",
        "@hyperdx/node-opentelemetry": "^0.8.1",
        "@opentelemetry/api": "^1.9.0",
        "@opentelemetry/auto-instrumentations-node": "^0.51.0",
        "@opentelemetry/exporter-metrics-otlp-proto": "^0.54.0",
        "@opentelemetry/exporter-trace-otlp-proto": "^0.54.0",
        "@opentelemetry/sdk-metrics": "^1.27.0",
        "@opentelemetry/sdk-node": "^0.54.0",
        "@prisma/client": "^5.21.1",
        "@sinclair/typebox": "^0.33.17",
        "altair-fastify-plugin": "7.3.6",
        "close-with-grace": "^2.1.0",
        "discord.js": "^14.16.3",
        "dotenv": "^16.4.5",
        "fastify": "4.28.1",
        "fastify-cli": "^7.0.1",
        "fastify-plugin": "^5.0.1",
        "fastify-tsconfig": "^2.0.0",
        "graphql": "^16.9.0",
        "mercurius": "14.1.0",
        "mercurius-codegen": "5.0.5",
        "mercurius-integration-testing": "8.2.0",
        "mongoose": "^8.7.3",
        "moment": "^2.30.1",
        "nexus": "^1.3.0",
        "swagger-jsdoc": "6.2.8",
        "prisma": "^5.21.1"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@tapjs/test": "^4.0.0",
        "@types/busboy": "^1.5.4",
        "@types/node": "^22.7.9",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/tap": "^15.0.12",
        "cpy-cli": "^5.0.0",
        "cross-env": "^7.0.3",
        "fast-json-stringify": "^6.0.0",
        "husky": "^9.1.6",
        "json-schema-to-typescript": "^15.0.2",
        "sort-package-json": "^2.10.1",
        "tap": "^21.0.1",
        "ts-node": "^10.9.2",
        "tsup": "^8.3.0",
        "tsx": "^4.19.1",
        "typescript": "^5.6.3"
    },
    "tsup": {
        "entry": [
            "src/**/*.ts"
        ],
        "splitting": false,
        "sourcemap": false,
        "clean": true,
        "format": [
            "cjs",
            "esm"
        ],
        "legacyOutput": true,
        "target": "es2018",
        "onSuccess": "npm run copy:assets"
    },
    "packageManager": "pnpm@9.12.2+sha512.22721b3a11f81661ae1ec68ce1a7b879425a1ca5b991c975b074ac220b187ce56c708fe5db69f4c962c989452eee76c82877f4ee80f474cebd61ee13461b6228"
}