{
    "$schema": "https://json.schemastore.org/tsconfig",
    "ts-node": {
        "compilerOptions": {
            "esModuleInterop": true
        }
    },
    "compilerOptions": {
        "outDir": "dist",
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "strict": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "newLine": "lf",
        "noUnusedLocals": true,
        "noFallthroughCasesInSwitch": true,
        "isolatedModules": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "lib": [
            "ESNext"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@cdn/*": [
                "src/cdn/*"
            ],
            "@generated/*": [
                "src/generated/*"
            ],
            "@modules/*": [
                "src/modules/*"
            ],
            "@plugins/*": [
                "src/plugins/*"
            ],
            "@router/*": [
                "src/routes/*"
            ],
            "@schemas/*": [
                "src/schemas/*"
            ],
            "@types/*": [
                "src/types/*"
            ],
            "@utils/*": [
                "src/utils/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}